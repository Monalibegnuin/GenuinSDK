<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ivShimmer"
        android:layout_width="@dimen/dimen_36dp"
        android:layout_height="@dimen/dimen_36dp"
        android:layout_centerVertical="true"
        android:src="@color/disableColor" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/dimen_8dp"
        android:layout_toStartOf="@+id/llSubscribe"
        android:layout_toEndOf="@+id/ivShimmer"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="@dimen/dimen_180dp"
            android:layout_height="@dimen/dimen_15dp"
            android:background="@color/disableColor" />

        <LinearLayout
            android:layout_width="@dimen/dimen_100dp"
            android:layout_height="@dimen/dimen_14dp"
            android:layout_marginTop="@dimen/dimen_6dp"
            android:background="@color/disableColor" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llSubscribe"
        android:layout_width="@dimen/dimen_108dp"
        android:layout_height="@dimen/dimen_24dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/dimen_24dp"
        android:background="@color/disableColor"
        android:orientation="horizontal" />


</RelativeLayout>