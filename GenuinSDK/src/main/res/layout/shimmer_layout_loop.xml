<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/dimen_16dp"
    android:layout_marginTop="@dimen/dimen_16dp"
    app:cardBackgroundColor="@color/colorWhite"
    app:cardCornerRadius="@dimen/dimen_8dp"
    app:strokeColor="@color/disableColor"
    app:strokeWidth="@dimen/dimen_1dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_200dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_120dp"
                android:layout_marginTop="@dimen/dimen_80dp"
                android:background="@color/splash_background_opacity5" />

            <LinearLayout
                android:id="@+id/llUpperContent"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_80dp"
                android:layout_marginStart="@dimen/dimen_16dp"
                android:layout_toStartOf="@+id/rlImagesContainer"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <!--<de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="@dimen/dimen_48dp"
                    android:layout_height="@dimen/dimen_48dp"
                    android:src="@color/disableColor" />-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="@dimen/dimen_132dp"
                        android:layout_height="@dimen/dimen_18dp"
                        android:background="@color/disableColor" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimen_4dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="@dimen/dimen_132dp"
                            android:layout_height="@dimen/dimen_18dp"
                            android:background="@color/disableColor" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dimen_4dp"
                            android:layout_marginEnd="@dimen/dimen_2dp"
                            android:fontFamily="@font/avenir_next_demi_bold"
                            android:text="@string/loop_dot"
                            android:textSize="@dimen/text_size_12sp" />

                        <LinearLayout
                            android:layout_width="@dimen/dimen_32dp"
                            android:layout_height="@dimen/dimen_18dp"
                            android:background="@color/disableColor" />

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llLowerContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/llUpperContent"
                android:layout_marginStart="@dimen/dimen_16dp"
                android:layout_marginTop="@dimen/dimen_16dp"
                android:layout_toStartOf="@+id/rlImagesContainer"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="@dimen/dimen_24dp"
                            android:layout_height="@dimen/dimen_24dp"
                            android:layout_marginStart="@dimen/dimen_32dp"
                            android:src="@color/disableColor"
                            app:civ_border_color="@color/colorWhite"
                            app:civ_border_width="@dimen/dimen_2dp" />

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="@dimen/dimen_24dp"
                            android:layout_height="@dimen/dimen_24dp"
                            android:layout_marginStart="@dimen/dimen_16dp"
                            android:src="@color/disableColor"
                            app:civ_border_color="@color/colorWhite"
                            app:civ_border_width="@dimen/dimen_2dp" />

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_width="@dimen/dimen_24dp"
                            android:layout_height="@dimen/dimen_24dp"
                            android:src="@color/disableColor"
                            app:civ_border_color="@color/colorWhite"
                            app:civ_border_width="@dimen/dimen_2dp" />

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_16dp"
                        android:layout_marginStart="@dimen/dimen_8dp"
                        android:background="@color/disableColor" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_12dp"
                    android:layout_marginTop="@dimen/dimen_8dp"
                    android:background="@color/disableColor" />

                <LinearLayout
                    android:layout_width="@dimen/dimen_200dp"
                    android:layout_height="@dimen/dimen_12dp"
                    android:layout_marginTop="@dimen/dimen_8dp"
                    android:background="@color/disableColor" />

                <LinearLayout
                    android:layout_width="@dimen/dimen_150dp"
                    android:layout_height="@dimen/dimen_12dp"
                    android:layout_marginTop="@dimen/dimen_8dp"
                    android:background="@color/disableColor" />

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rlImagesContainer"
                android:layout_width="@dimen/dimen_124dp"
                android:layout_height="@dimen/dimen_168dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true">

                <RelativeLayout
                    android:id="@+id/rlUnReadContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:visibility="visible">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/ivUnRead3"
                        android:layout_width="@dimen/dimen_84dp"
                        android:layout_height="@dimen/dimen_148dp"
                        android:layout_marginStart="@dimen/dimen_16dp"
                        android:alpha="0.25"
                        android:src="@color/disableColor"
                        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize" />

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/ivUnRead2"
                        android:layout_width="@dimen/dimen_84dp"
                        android:layout_height="@dimen/dimen_148dp"
                        android:layout_marginStart="@dimen/dimen_8dp"
                        android:layout_marginTop="@dimen/dimen_8dp"
                        android:alpha="0.5"
                        android:src="@color/disableColor"
                        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize" />

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/ivUnRead1"
                        android:layout_width="@dimen/dimen_84dp"
                        android:layout_height="@dimen/dimen_148dp"
                        android:layout_marginTop="@dimen/dimen_16dp"
                        android:src="@color/disableColor"
                        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize" />

                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>